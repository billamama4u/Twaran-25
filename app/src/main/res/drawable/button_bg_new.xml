<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#222222"/> <!-- Darker color when pressed -->
            <corners android:radius="50dp"/>
            <stroke android:width="2dp" android:color="#00AEEF"/> <!-- Blue border on press -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#121212"/> <!-- Default black color -->
            <corners android:radius="50dp"/>
            <stroke android:width="2dp" android:color="#444444"/> <!-- Gray border -->
        </shape>
    </item>
</selector>
