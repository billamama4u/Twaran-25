<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".events.GameEventsActivity">

    <!-- Day Selection Buttons -->
    <LinearLayout
        android:id="@+id/buttons_row"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:src="@drawable/back_arrow"/>

        <!-- Spacer to push buttons to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:focusable="false"
                android:clickable="true"
                android:cursorVisible="false"
                android:text="Day 1"
                android:background="@drawable/rounder_btn_bg"
                android:textColor="#FFFFFF"
                android:textColorHint="#737373"
                android:singleLine="true"
                android:gravity="center"
                android:textAlignment="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:focusable="false"
                android:clickable="true"
                android:cursorVisible="false"
                android:text="Day 2"
                android:background="@drawable/rounder_btn_bg"
                android:textColor="#FFFFFF"
                android:textColorHint="#737373"
                android:singleLine="true"
                android:gravity="center"
                android:textAlignment="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:focusable="false"
                android:clickable="true"
                android:cursorVisible="false"
                android:text="Day 3"
                android:background="@drawable/rounder_btn_bg"
                android:textColor="#FFFFFF"
                android:textColorHint="#737373"
                android:singleLine="true"
                android:gravity="center"
                android:textAlignment="center"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Timeline and RecyclerView Container -->
    <LinearLayout
        android:layout_below="@+id/buttons_row"
        android:layout_above="@+id/bottom_navigation"
        android:layout_marginTop="30dp"
        android:id="@+id/college_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- RecyclerView for Event List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/events_recycler"
            android:layout_width="0dp"
            tools:listitem="@layout/event_layout"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"/>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:weightSum="4"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_matches"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Matches"
            android:background="@drawable/navigation_border"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_events"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Events"
            android:textColor="@color/white"
            android:background="@drawable/navigation_border"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_leaderboard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/navigation_border"
            android:text="Ranking"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_contact"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/navigation_border"
            android:layout_height="50dp"
            android:text="Contact Us"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Button.TextButton" />
    </LinearLayout>

</RelativeLayout>
