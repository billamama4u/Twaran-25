<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#DB0808"
            android:id="@+id/start_time"
            android:text="8:00 am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="180dp"
            android:layout_height="2dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/game_name"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Name"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Date : 05.03.2025"
            android:id="@+id/date"
            />
        <TextView
            android:layout_marginStart="40dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place : New Ground"
            android:id="@+id/place"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/college_one_image"
            android:background="@drawable/circular_shape"
            android:src="@drawable/iiit_pune"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textColor="#C88510"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IIIT Gwalior"
            android:id="@+id/college_one"
            />
        <TextView
            android:textColor="#008000"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vs"
            />
        <ImageView
            android:background="@drawable/circular_shape"
            android:id="@+id/college_two_image"
            android:src="@drawable/iiit_pune"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IIIT Delhi"
            android:id="@+id/college_two"
            />
    </LinearLayout>
</LinearLayout>